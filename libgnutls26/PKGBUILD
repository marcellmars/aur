# Maintainer: Sairon Istyar <saironiq@gmail.com>

pkgname=libgnutls26
pkgver=2.12.20
pkgrel=2
pkgdesc='gnutls26 library (shared objects)'
arch=('i386' 'x86_64')
url="http://www.gnutls.org/"
license=(LGPLv3)

if [ "${CARCH}" = "x86_64" ] ; then
  _arch="amd64"
  source=(http://ftp.debian.org/debian/pool/main/g/gnutls26/libgnutls26_2.12.20-4_amd64.deb)
  md5sums=('bd7a24034fc2ef0c7654750fb1d5aba7')
else
  _arch="i386"
  source=(http://ftp.debian.org/debian/pool/main/g/gnutls26/libgnutls26_2.12.20-4_i386.deb)
  md5sums=('10da17fe0faee443c8f6feccd9f47035')
fi

package() {
  ar vx $srcdir/libgnutls26_2.12.20-4_${_arch}.deb
  tar xzvf $srcdir/data.tar.gz
  install -Dm755 $srcdir/usr/lib/${CARCH}-linux-gnu/libgnutls.so.26.22.4 $pkgdir/usr/lib/libgnutls.so.26.22.4
  ln -s libgnutls.so.26.22.4 $pkgdir/usr/lib/libgnutls.so.26
  install -Dm755 $srcdir/usr/lib/${CARCH}-linux-gnu/libgnutls-extra.so.26.22.4 $pkgdir/usr/lib/libgnutls-extra.so.26.22.4
  ln -s libgnutls-extra.so.26.22.4 $pkgdir/usr/lib/libgnutls-extra.so.26
}
